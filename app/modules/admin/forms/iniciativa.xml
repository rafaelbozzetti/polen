<form>
    <elements>
        <id>
            <type>hidden</type>            
        </id>
        <titulo>
            <type>text</type>
            <options>
                <label>Nome de sua iniciativa</label>
                <class>form-control  input-lg</class>
                <required>true</required>
            </options>
        </titulo>
        <descricao>
            <type>textarea</type>
            <options>
                <class>form-control  input-lg</class>
                <rows>10</rows>
                <label>Descreva sua iniciativa</label>
                <required>true</required>
                <validators>
                    <notEmpty>
                        <validator>notEmpty</validator>
                        <options>
                            <messages>
                                <isEmpty>Informe seu nome para o cadastro</isEmpty>
                            </messages>
                        </options>
                    </notEmpty>                    
                </validators>
            </options>
        </descricao>
        <imagem>
            <type>file</type>
            <options>
                <label>Imagem de sua iniciativa ou logomarca</label>
                <required>true</required>
                <description>
                        Selecione uma nova imagem, caso necess√°rio.
                </description>
            </options>
        </imagem>
    </elements>
</form>